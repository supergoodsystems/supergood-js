{
  "compilerOptions": {
    "allowJs": true,
    "removeComments": true,
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
